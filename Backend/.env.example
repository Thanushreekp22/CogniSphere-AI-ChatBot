# Server Configuration
PORT=5000

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For Local MongoDB (recommended for development)
MONGODB_URI=mongodb://localhost:27017/cognisphere

# For MongoDB Atlas (cloud database):
# Replace <username>, <password>, and <cluster-url> with your actual values
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/cognisphere?retryWrites=true&w=majority

# AI API Keys
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# JWT Security Configuration
# IMPORTANT: Generate a strong random secret for production
# Run this command to generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS in production)
# Leave empty for development
FRONTEND_URL=
JWT_EXPIRES_IN=7d

# CORS Configuration (Optional - for production)
# CLIENT_URL=http://localhost:5173
