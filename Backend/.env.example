# Server Configuration
PORT=5000

# Database Configuration
# For Local MongoDB (recommended for development)
MONGODB_URI=mongodb://localhost:27017/novamind

# For MongoDB Atlas (if you prefer cloud database)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/novamind?retryWrites=true&w=majority

# AI API Keys
GROQ_API_KEY=your_groq_api_key_here

# JWT Security Configuration
# IMPORTANT: Change this to a strong random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_random_string
JWT_EXPIRES_IN=7d

# CORS Configuration (Optional - for production)
# CLIENT_URL=http://localhost:5173
